<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvIndividualExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivExerciseThumb"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@color/shimmer"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvMainExerciseListTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/transparent"
                    android:text="Exercise title Exercise title Exercise title "
                    android:background="@color/shimmer"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tvMainExerciseListCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise category"
                    android:textColor="@android:color/transparent"
                    android:background="@color/shimmer"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>