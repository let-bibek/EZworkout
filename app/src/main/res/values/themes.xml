<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EZworkout" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_dark_200</item>
        <item name="colorPrimaryVariant">@color/theme_dark_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_green</item>
        <item name="colorSecondaryVariant">@color/theme_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

<!--    splash theme-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

<!--    no actionbar-->
    <style name="Theme.EZworkout.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    custom actionbar-->
    <style name="CustomActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--        status bar color-->
        <item name="colorPrimary">@color/theme_dark_500</item>
        <!--        action bar color-->
        <item name="colorPrimaryDark">@color/theme_dark_200</item>
        <!--        textView cursor, progress bar etc color-->
        <item name="colorAccent">@color/blue_700</item>

        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>